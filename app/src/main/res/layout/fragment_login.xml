<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ScrollView
        android:id="@+id/r14zuo1n4xn5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rkufa0w1ewaj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="75dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/reumah1d528j"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginBottom="27dp"
                    android:src="@drawable/loginscreen03"
                    android:scaleType="centerCrop"
                    />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txtWelcome"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:textSize="20sp"
                    android:layout_marginBottom="22dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Bienvenido de nuevo"
                    />
                <LinearLayout
                    android:id="@+id/r4udf4xpk8c8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_theme_light_surface"
                    android:paddingHorizontal="18dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_marginBottom="10dp"
                        android:hint="Usuario">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/r1pgcghmmq55"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/md_theme_light_surface"
                    android:paddingHorizontal="18dp"
                    android:layout_marginBottom="22dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                        android:layout_marginBottom="10dp"
                        android:hint="ContraseÃ±a">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/rygwdk62lsw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:background="@color/md_theme_light_surface"
                    android:orientation="horizontal">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnLogin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:text="Ingresar" />
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/btnRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="13dp"
                    android:text="Nuevo usuario? Registrate"
                    android:textColor="@color/md_theme_light_onSurfaceVariant"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground" />
                <LinearLayout
                    android:id="@+id/rboy90worup"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="#FFF7FCF9"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>